{
    "compilerOptions": {
        "module": "system",
        "target": "es6",
        "lib": ["es6", "dom"],
        "noImplicitAny": true,
        "sourceMap": false,
        //"outDir": "./dist",
        //"rootDir": "./src",
        "outFile": "./dist/bundle.js",
        //"declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        //"declarationDir": "./dist/typings"

	"moduleResolution": "node",  // Add module resolution setting
        "baseUrl": "./",              // Add base URL for module resolution
        "paths": {
            "*": ["node_modules/*"]     // Add paths for module resolution
        }
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}
